{
  "name": "dawchihliou.github.io",
  "version": "3.2.33",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "yarn sitemap && yarn rss",
    "start": "next start",
    "export": "next export",
    "lint": "eslint '**/*.{js,ts,jsx,tsx}'",
    "test": "jest --watch",
    "test:ci": "jest",
    "test:e2e": "playwright test",
    "test:e2e:ci": "cross-env CI=true playwright test",
    "image": "yarn image:optimization",
    "image:optimization": "dx-scripts image public/articles/**/*.png public/raw/*.png -o public/optimized --png",
    "image:shields": "node scripts/shields.mjs",
    "meta": "node scripts/meta.mjs",
    "github": "node scripts/github.mjs",
    "sitemap": "node scripts/sitemap.mjs",
    "rss": "node --experimental-json-modules scripts/rss.mjs",
    "fulltext-search": "node --experimental-json-modules scripts/fulltext-search/index.mjs && cargo run scripts/fulltext-search && rm wasm/fulltext-search/pkg/.gitignore",
    "prepare": "yarn meta && yarn image && yarn github",
    "lighthouse:dev": "dx-scripts lighthouse http://localhost:3000/",
    "lighthouse:prod": "dx-scripts lighthouse https://dawchihliou.github.io/",
    "deploy": "rm -rf node_modules/.cache && yarn build && yarn export && touch out/.nojekyll && git add out/ && git commit -m \"chore: deploy to gh-pages\" && git subtree push --prefix out origin gh-pages",
    "release": "release-it",
    "analyze": "cross-env ANALYZE=true yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "next": "^12.1.0",
    "next-plausible": "^3.1.9",
    "normalize.css": "^8.0.1",
    "prism-themes": "^1.9.0",
    "react": "^18.2.0",
    "react-burger-menu": "^2.7.1",
    "react-dom": "^18.2.0",
    "react-icons": "^4.3.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^12.1.1",
    "@octokit/core": "^3.5.1",
    "@playwright/test": "^1.21.0",
    "@release-it/conventional-changelog": "^4.1.0",
    "@svgr/webpack": "^6.2.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "12.1.5",
    "@types/node": "^18.11.17",
    "@types/react": "^18.0.26",
    "@types/react-burger-menu": "^2.6.1",
    "@types/react-dom": "^18.0.10",
    "@types/react-icons": "^3.0.0",
    "@types/rss": "^0.0.28",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "babel-eslint": "^10.1.0",
    "contentlayer": "^0.2.9",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog-with-jiraid-detection": "^1.0.3",
    "dx-scripts": "^0.1.1",
    "eslint": "^7.9.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.21.1",
    "eslint-plugin-react-hooks": "^4.1.2",
    "globby": "^13.0.0",
    "got": "^12.1.0",
    "husky": "^4.3.0",
    "jest": "^27.5.1",
    "jest-next-dynamic": "^1.0.1",
    "lint-staged": "^10.4.0",
    "next-contentlayer": "^0.2.9",
    "prettier": "^2.1.2",
    "raw-loader": "^4.0.1",
    "reading-time": "^1.5.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.3.1",
    "rehype-slug": "^5.0.1",
    "release-it": "^14.12.4",
    "remark": "^14.0.2",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2",
    "sharp": "^0.30.5",
    "strip-markdown": "^5.0.0",
    "terser": "^5.14.2",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog-with-jiraid-detection"
    }
  }
}
