    "rehype-code-titles": "^1.0.3",
    "rehype-prism-plus": "^1.3.1",
    "rehype-slug": "^5.0.1",
    "remark-gfm": "^3.0.1",
    "rss": "^1.2.2"
  },
  "devDependencies": {
    "@types/node": "^14.11.2",
    "@types/react": "^16.9.49",
    "@types/react-burger-menu": "^2.6.1",
