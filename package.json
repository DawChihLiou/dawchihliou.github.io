    "next-contentlayer": "^0.0.34",
    "normalize.css": "^8.0.1",
    "prism-themes": "^1.9.0",
    "prismjs": "^1.25.0",
    "react": "^17.0.2",
    "react-burger-menu": "^2.7.1",
